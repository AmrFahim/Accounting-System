@model IEnumerable<ALFATEX4TRADE.Models.Data>

@{
    ViewBag.Title = "Index";
}

<h2>Journal Entry</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div align="center">
@using (Html.BeginForm("Index", "Data", FormMethod.Post))
{

    <div class="form-inline ">
        <div class="form-group" style="margin-right:25px">
            @Html.TextBox("DailyNum", null, new
           {
              
               autocomplete="off",
               @placeholder = " Daily Number ",
               @class = "form-control",
               @id = "DayID"
           })

        </div>
        <div class="form-group" style="margin-right:25px">

            @Html.TextBox("Date", null, new
       {
           @Value = DateTime.Today.ToString("dd MMM yyyy"),
           @placeholder = " Date ",
           autocomplete="off",
           @class = "datepicker form-control",
           @id = "DayDate"
       })
        </div>

        <div class="form-group">

            <input type="submit" value="OK " class="form-control" id="Done" />
        </div>
    </div>

}
</div>

<div id="MyId" align="center">
<div style="margin-top:25px ; max-width:800px ; border:solid" >

    <div style="border-bottom:solid ; height:70px ; ">
        <div>
            <span style="margin-right:5px; font-weight:bold ;font-size:20px; margin-left:8px "> Journal Entry Number : </span>
            @foreach (var item in Model)
            {
                <span style="font-size:18px; margin-right:20px">
                    @Html.DisplayFor(modelItem => item.DailyNum)
                </span>
                break;
            }
        </div>
        <span style="margin-right:5px ; font-weight:bold ;font-size:20px; margin-left:8px  "> @Html.DisplayNameFor(model => model.Date) :</span>

        @foreach (var item in Model)
        {
            <span style="font-size:18px ; margin-right:20px">
                @Html.DisplayFor(modelItem => item.Date)
            </span>
            break;
        }



    </div>

    <table class="table table-bordered">
        <tr style="border-bottom:solid">
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.AccountID)
            </th>

            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.AccountName)
            </th>

            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.DR)
            </th>
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.CR)
            </th>

            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Description)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.AccountID)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.AccountName)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.DR)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.CR)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            </tr>
        }

    </table>

</div>
</div>
<div align="center" style="margin-top:20px">
    <button onclick="print('MyId')" class="btn btn-default">  Print </button>
</div>

<script>
    function print(el) {
        var res = document.body.innerHTML;
        var p = document.getElementById(el).innerHTML;
        document.body.innerHTML = p;
        window.print();
        document.body.innerHTML = res;
    }
</script>


<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

@section scripts{

<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd MM yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-10:+10"
            });

        });
    </script>
}