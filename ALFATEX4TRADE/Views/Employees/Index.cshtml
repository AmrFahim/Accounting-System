@model IEnumerable<ALFATEX4TRADE.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2> Employees </h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p style="float:right">
    @Html.ActionLink("Print Information ", "print")
</p>

<div align="center" style="margin-bottom:25px">
    @using (Html.BeginForm("Index", "Employees", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-inline">
            <div class="form-group">
                @Html.TextBox("EmpID", null, new { type = "number", min = "0", step = "1", @class = "form-control", @placeholder = " Employee ID ", autocomplete = "off" })
            </div>
            <div class="form-group" style="margin-left:15px">
                <input type="submit" value=" OK " class="btn btn-default" />
            </div>
        </div>
    }

</div>
<div style="  width: 1200px;
    overflow-x: auto;
    white-space: nowrap; border:solid;" align="center">

    <table class="table table-bordered">
        <tr style="border-bottom:solid">
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.EmpID)
            </th>
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.EmpName)
            </th>

            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.Brithday)
            </th>

            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.Base)
            </th>
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.DisInsurance)
            </th>

            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.AbsenceDays)
            </th>
   
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.Transportation)
            </th>

            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.Address)
            </th>

            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.PermissionTime)
            </th>
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.Late)
            </th>
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.OverTime)
            </th>

            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.Loan)
            </th>

            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.BuyValue)
            </th>
            <th style="text-align:center ; border-right:solid">
                @Html.DisplayNameFor(model => model.penalty)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.PureSalary)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.EmpID)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.EmpName)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Brithday)
                </td>

                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Section)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Base)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
      

                <td style="text-align:center">

                    @Html.DisplayFor(modelItem => item.DisInsurance)
                </td>

                
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.AbsenceDays)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Transportation)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>



                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.PermissionTime)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Late)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.OverTime)
                </td>
       
         
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Loan)
                </td>
        
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.BuyValue)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.penalty)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.PureSalary)
                </td>

                <td style="text-align:center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmpID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmpID })
                </td>
            </tr>
        }

    </table>
</div>