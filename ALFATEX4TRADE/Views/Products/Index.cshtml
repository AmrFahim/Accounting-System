@model IEnumerable<ALFATEX4TRADE.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div align="center" style="margin-bottom:25px">

    @using (Html.BeginForm("Index", "Products", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <div class="form-inline">
        <div class="form-group">
            @Html.TextBox("ProductID", null, new { @class = "form-control", @placeholder = " ProductID ID ", autocomplete = "off" })
        </div>
        <div class="form-group" style="margin-left:15px">
            <input type="submit" value=" OK " class="btn btn-default" />
        </div>
    </div>

    }
    </div>
<div align="center">
    <div style="max-width:1000px;
    white-space: nowrap; border:solid;">
        <table class="table table-bordered">
            <tr style="border-bottom:solid">
                <th style="text-align:center ; border-right:solid">
                    @Html.DisplayNameFor(model => model.ProductID)
                </th>

                <th style="text-align:center ; border-right:solid">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th style="text-align:center ; border-right:solid">
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th style="text-align:center ; border-right:solid">
                    @Html.DisplayNameFor(model => model.Session)
                </th>
                <th style="text-align:center ; border-right:solid">
                    @Html.DisplayNameFor(model => model.ValueToID)
                </th>


                <th style="text-align:center ; border-right:solid">
                    @Html.DisplayNameFor(model => model.Incoming)
                </th>
                <th style="text-align:center ; border-right:solid">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th style="text-align:center"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.ProductID)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Session)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.ValueToID)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Incoming)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td style="text-align:center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |


                        @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>