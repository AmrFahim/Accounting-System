@model  IEnumerable<ALFATEX4TRADE.Models.Stocktaking>


@{
    ViewBag.Title = "Stocktaking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Stocktaking </h2>
<div align="center">
    @using (Html.BeginForm("Index", "StockTaking", FormMethod.Post))
    {

        <div class="form-inline">

            <div class="form-group" style="margin-right:25px">
                @Html.TextBox("CleintID", null,
                new
                {
      
                    @class = "form-control",
                    @placeholder = " Cleint Code ",
                    @autocomplete = "off"
                })
            </div>


            <div class="form-group" style="margin-right:25px">
                @Html.TextBox("OpeningDate", null, new
           {
               @placeholder = " Opening Date ",
               autocomplete = "off",
               @class = "datepicker form-control"

           })

            </div>
            <div class="form-group" style="margin-right:25px">

                @Html.TextBox("EndingDate", null, new
       {

           @placeholder = "Ending Date ",
           autocomplete = "off",
           @class = "datepicker form-control"

       })
            </div>

            <div class="form-group">

                <input type="submit" value=" OK " class="form-control" id="Done" />
            </div>
        </div>

    }
</div>
<div align="center">

    <div style="margin-top:25px ; max-width:800px ; border:solid">


        <div style="border-bottom:solid ; height:60px ; ">
            <div>
                <span style="margin-right:5px; font-weight:bold ;font-size:20px; margin-left:8px "> Cleint Name : </span>
                @foreach (var item in Model)
                {
                    <span style="font-size:18px; margin-right:20px">
                        @Html.DisplayFor(modelItem => item.CleintName)
                    </span>
                    break;
                }
            </div>
            </div>




            <table class="table table-bordered">
                <tr style="border-bottom:solid">
                    <th style="text-align:center ; border-right:solid">
                        @Html.DisplayNameFor(model => model.ProductID)
                    </th>

                    <th style="text-align:center; border-right:solid">
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>

                    <th style="text-align:center; border-right:solid">
                        @Html.DisplayNameFor(model => model.Size)
                    </th>

                    <th style="text-align:center; border-right:solid">
                        @Html.DisplayNameFor(model => model.Incoming)
                    </th>
                    <th style="text-align:center; border-right:solid">
                        @Html.DisplayNameFor(model => model.Outgoing)
                    </th>
                    <th style="text-align:center; border-right:solid">
                        @Html.DisplayNameFor(model => model.Balance)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.CleintOutgoing)
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.ProductID)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Size)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Incoming)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Outgoing)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Balance)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.CleintOutgoing)
                        </td>
                    </tr>
                }

            </table>
        </div>
</div>




<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

@section scripts{

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd MM yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-10:+10"
            });

        });
    </script>
}